{
  "compilerOptions": {
    "lib": [
      "es2018",
      "dom"
    ],
    //"declaration": true,
    "outDir": "./dist",
    "target": "es2015",
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es2015",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "experimentalDecorators": true
  },
  "include": [
    "src"
  ]
}
